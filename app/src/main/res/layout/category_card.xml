<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/_6sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPaddingRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/primary"
                />

            <ImageView
                android:id="@+id/category_product_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/pdfimage" />

            <TextView
                android:id="@+id/category_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@+id/category_product_img"
                android:autoSizeMaxTextSize="@dimen/_10ssp"
                android:autoSizeMinTextSize="@dimen/_9ssp"
                android:text="PRODUCT TITLE"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_product_name"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_toRightOf="@id/category_product_img"
                android:autoSizeMaxTextSize="@dimen/_10ssp"
                android:autoSizeMinTextSize="@dimen/_9ssp"
                android:text="PRICE RM"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chosen_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_product_name"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/category_price"
                android:autoSizeMaxTextSize="10sp"
                android:autoSizeMinTextSize="9sp"
                android:text="30"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@+id/category_price"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/category_product_img"
                android:autoSizeMaxTextSize="@dimen/_10ssp"
                android:autoSizeMinTextSize="@dimen/_9ssp"
                android:autoSizeTextType="uniform"
                android:elevation="@dimen/_10sdp"
                android:text="description description description description description description description description description description description description description description"
                android:textSize="@dimen/_12ssp" />


            <RatingBar
                android:id="@+id/category_ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category_description"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toRightOf="@id/category_product_img"
                android:isIndicator="true"
                android:max="5"
                android:rating="4" />


           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/contact_seller"
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:tint="@color/primary"
               android:src="@mipmap/ic_chat"
               android:layout_alignParentEnd="true"
               android:layout_below="@id/category_description"
               android:layout_marginRight="@dimen/_30sdp"
               />

            <TextView
                android:id="@+id/category_posted_by_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_product_img"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="posted by"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/_8ssp"
                />

            <TextView
                android:id="@+id/category_posted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_product_img"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@id/category_posted_by_tv"
                android:text="usern ame"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/_8ssp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_6sdp"
                android:layout_below="@id/category_posted_by_tv"
                android:background="@color/primary"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>