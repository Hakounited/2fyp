<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewMyOrder">


  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar" />

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/back_btn"
      android:layout_width="@dimen/_35sdp"
      android:layout_height="@dimen/_35sdp"
      android:layout_marginStart="@dimen/_6sdp"
      android:layout_marginLeft="@dimen/_10sdp"
      android:elevation="@dimen/_5sdp"
      android:padding="@dimen/_5sdp"
      android:paddingStart="@dimen/_12sdp"
      android:src="@drawable/ic_back"
      android:tint="@color/white" />

  <LinearLayout
      android:id="@+id/ll1"
      android:layout_width="match_parent"
      android:layout_below="@+id/toolbar"
      android:orientation="horizontal"
      android:gravity="center_horizontal"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: "
        android:textStyle="bold"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/primary"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/my_orders_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9999999"
        android:textStyle="bold"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/primary"

        />


  </LinearLayout>

  <View
      android:id="@+id/view1"
      android:padding="@dimen/_20sdp"
      android:layout_width="@dimen/_300sdp"
      android:layout_below="@id/ll1"
      android:layout_centerHorizontal="true"
      android:background="@color/primary"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_height="@dimen/_2sdp"/>

  <LinearLayout
      android:id="@+id/ll2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/view1"
      android:layout_marginTop="@dimen/_30sdp"
      android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:paddingStart="@dimen/_50sdp">

      <CheckBox
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_20sdp"
          android:checked="true"
          android:clickable="false" />


      <View
          android:layout_width="@dimen/_4sdp"
          android:layout_height="@dimen/_90sdp"
          android:layout_marginLeft="@dimen/_8sdp"
          android:layout_marginTop="@dimen/_3sdp"
          android:background="@color/primary" />

      <CheckBox
          android:id="@+id/order_confirmed_check_box"
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_20sdp"
          android:clickable="false" />

      <View
          android:layout_width="@dimen/_4sdp"
          android:layout_height="@dimen/_90sdp"
          android:layout_marginLeft="@dimen/_8sdp"
          android:layout_marginTop="@dimen/_3sdp"
          android:background="@color/primary" />

      <CheckBox
          android:id="@+id/order_recieved_check_box"
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_20sdp"
          android:clickable="false" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


      <ImageView
          android:layout_width="@dimen/_55sdp"
          android:layout_height="@dimen/_55sdp"
          android:layout_marginLeft="@dimen/_30sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:src="@drawable/placed" />

      <ImageView
          android:layout_width="@dimen/_55sdp"
          android:layout_height="@dimen/_55sdp"
          android:layout_marginLeft="@dimen/_33sdp"
          android:layout_marginTop="@dimen/_50sdp"
          android:src="@drawable/confirmed" />

      <ImageView
          android:layout_width="@dimen/_55sdp"
          android:layout_height="@dimen/_55sdp"
          android:layout_marginLeft="@dimen/_30sdp"
          android:layout_marginTop="@dimen/_50sdp"
          android:src="@drawable/receive" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Order Placed"
          android:textColor="@color/primary"
          android:textSize="@dimen/_13ssp"
          android:textStyle="bold"

          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp"
          android:text="your order has been placed"
          android:textColor="@color/primary"

          android:textSize="@dimen/_10ssp" />


      <TextView
          android:id="@+id/order_confirmed_tv2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_60sdp"
          android:text="Order Confirmed"
          android:textColor="@color/primary"
          android:textSize="@dimen/_13ssp"
          android:textStyle="bold"

          />

      <TextView
          android:id="@+id/order_confirmed_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp"
          android:text="your order has been confirmed"
          android:textColor="@color/primary"

          android:textSize="@dimen/_10ssp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_70sdp"
          android:text="Order Received"
          android:textColor="@color/primary"
          android:textSize="@dimen/_13ssp"
          android:textStyle="bold"

          />

      <TextView
          android:id="@+id/order_received_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp"
          android:text=""
          android:textColor="@color/primary"

          android:textSize="@dimen/_10ssp" />


    </LinearLayout>


  </LinearLayout>


  <com.google.android.material.button.MaterialButton
      android:id="@+id/rate_product_btn"
      android:layout_width="wrap_content"
      android:layout_below="@+id/ll2"
      android:layout_marginTop="@dimen/_30sdp"
      android:layout_centerHorizontal="true"
      android:text="Rate "
      android:visibility="gone"
      android:layout_height="wrap_content"/>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/contact_admin_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Contact admin"
      android:layout_marginTop="@dimen/_60sdp"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/ll2"
      />

  <RatingBar
      android:id="@+id/product_ratingbar"
      style="@style/Widget.AppCompat.RatingBar.Small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_30sdp"
      android:visibility="gone"
      android:layout_below="@+id/ll2"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="@dimen/_10sdp"
      android:layout_marginBottom="@dimen/_5sdp"
      android:isIndicator="true"
      android:max="5"
      android:rating="4" />



</RelativeLayout>
