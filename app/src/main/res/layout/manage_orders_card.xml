<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:layout_margin="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/primary"
                />


            <ImageView
                android:id="@+id/my_order_img"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/imagepdf" />

            <LinearLayout
                android:id="@+id/manage_product_ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_toRightOf="@+id/my_order_img"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:text="Order ID:"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="9999999"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/manage_product_ll2"
                android:layout_width="match_parent"
                android:layout_below="@+id/manage_product_ll1"
                android:layout_toRightOf="@+id/my_order_img"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="placed by:"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/buyer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hako"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:textColor="@color/primary"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/confirm_order_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/manage_product_ll2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toRightOf="@+id/my_order_img"
                android:text="Confirm order"
                android:textColor="@color/primary"
                android:textSize="@dimen/_9ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/confirm_order_tv"
                android:layout_toRightOf="@id/my_order_img"
                android:layout_height="wrap_content">




                <ImageButton
                    android:id="@+id/confirm_order_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/check"
                    android:backgroundTint="@color/primary"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <ImageButton
                    android:id="@+id/cancel_order_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/cancel"
                    android:backgroundTint="@color/erro"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status:"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/primary"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />

                <TextView
                    android:id="@+id/manage_order_confirmed_tv"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmed"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_9ssp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />


            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_5sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/primary"
                />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>