<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditProduct">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/primary"
        android:elevation="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            android:elevation="@dimen/_5sdp"
            android:paddingStart="@dimen/_12sdp"
            />

    </LinearLayout>





    <TextView
        android:id="@+id/edit_product_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your product"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        />


    <LinearLayout
        android:id="@+id/edit_ll"
        android:layout_width="match_parent"
        android:layout_below="@+id/edit_product_tv"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/edit_product_img"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:id="@+id/edit_product_choose_img"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/upload"
            />


    </LinearLayout>

    <LinearLayout
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_below="@id/edit_ll"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/edit_product_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/background_input"
            android:textColor="@color/primary_text"
            android:hint="Product name"
            android:inputType="text"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            />


        <EditText
            android:id="@+id/edit_product_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/background_input"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Description Description Description"
            android:padding="@dimen/_16sdp"
            />

        <EditText
            android:id="@+id/edit_product_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_input"
            android:hint="Product Price"
            android:padding="@dimen/_16sdp"
            android:inputType="number"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_product_update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            />

    </LinearLayout>


</RelativeLayout>